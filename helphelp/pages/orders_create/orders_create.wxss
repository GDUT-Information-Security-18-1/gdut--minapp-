page {
  background-color: #edece8;
}
.describe_main {
  padding: 20rpx;
  color: #666;
}
.describe_main .describe_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.describe_main .describe_content textarea {
  padding: 10rpx;
  margin-left: 15rpx;
}
.describe_main .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.describe_main .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  color: #ccc;
}
.describe_main .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.describe_main .describe_position {
  background-color: #fff;
  margin-top: 20rpx;
  height: 150rpx;
  overflow: hidden;
}
.describe_main .describe_position textarea {
  padding: 10rpx;
  margin-left: 15rpx;
}
.describe_main .describe_money {
  background-color: #fff;
  margin-top: 20rpx;
  height: 70rpx;
  overflow: hidden;
}
.describe_main .describe_money textarea {
  color: red;
  padding: 10rpx;
  margin-left: 15rpx;
}
.describe_main .form_btn_wrap {
  margin-top: 20rpx;
}
.describe_main .describe_arrive_time {
  background-color: #fff;
  margin-top: 20rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
}
.describe_main .describe_arrive_time .time-picker {
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  width: 100%;
}
